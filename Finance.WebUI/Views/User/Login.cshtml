@model User

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="col-md-4">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success custom-alert">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger custom-alert">@TempData["ErrorMessage"]</div>
        }


        <form asp-controller="User" asp-action="Login" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">E-mail Adresi</label>
                <input type="email" class="form-control" asp-for="email">
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <input type="password" class="form-control" asp-for="password">
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="rememberCheck">
                <label class="form-check-label" for="rememberCheck">Beni Hatırla</label>
            </div>


            <button type="submit" class="btn btn-primary" style="width: 100%; display: block; font-size: 18px;">
                Giriş Yap
            </button>


            <div class="m-4"></div>

            <div style="text-align: center;">
                <p>Bir hesabınız yok mu? <a asp-controller="User" asp-action="GoToLogin">Hemen oluşturun!</a> </p>
            </div>

        </form>



    </div>
</div>

<style>
    .form-control {
        width: 100%;
        height: 40px;
    }

    .custom-alert {
        max-width: 300px; /* İstediğiniz genişliği ayarlayın */
        margin: 10px auto; /* Merkezde görünmesi için */
    }
</style>
